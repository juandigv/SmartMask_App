<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    >

    <EditText
        android:id="@+id/editUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:hint="DirecciÃ³n IPV4 Servidor API"
        android:inputType="text" />


    <Switch
        android:id="@+id/switchSync"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editUrl"
        android:text="Sincronizar Datos con Servidor" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nota: Los datos se sincronizan cada 30 minutos"
        android:textSize="12sp"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_below="@+id/switchSync"
        />


</RelativeLayout>